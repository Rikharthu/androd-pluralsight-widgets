<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="180dp"
              android:layout_height="110dp"
              android:background="@android:color/darker_gray">

  <ImageView
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:id="@+id/imageView"
      android:layout_gravity="center"
      android:src="@drawable/kitty_round_48x48"
      android:layout_centerVertical="true"
      android:layout_alignParentLeft="true"
      android:layout_marginLeft="@dimen/widget_inner_margin"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="A Kitty Widget"
      android:id="@+id/txtTitleText"
      android:textColor="@android:color/white"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="@dimen/widget_inner_margin"/>

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="1"
      android:id="@+id/btn1"
      android:layout_alignParentTop="true"
      android:layout_toLeftOf="@+id/btn2"
      android:layout_marginTop="@dimen/widget_inner_margin"
      android:layout_marginRight="@dimen/widget_inner_margin"/>

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="2"
      android:id="@+id/btn2"
      android:layout_alignBottom="@+id/btn1"
      android:layout_alignParentRight="true"
      android:layout_marginRight="@dimen/widget_inner_margin"/>
</RelativeLayout>